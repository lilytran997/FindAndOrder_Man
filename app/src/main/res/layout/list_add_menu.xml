<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="afterDescendants">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_foodpic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dinner" />

    <EditText
        android:id="@+id/inNameFood"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_chon_quan"
        android:inputType="text"
        android:paddingStart="42dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btnInComplete"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_dark_blue2"
        android:padding="5dp"
        android:text="Tên"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/inNameFood"
        app:layout_constraintTop_toTopOf="@+id/inNameFood" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_dark_blue2"
        android:padding="5dp"
        android:text="Giá"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/inPrice"
        app:layout_constraintTop_toTopOf="@+id/inPrice" />

    <EditText
        android:id="@+id/inPrice"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_chon_quan"
        android:inputType="number"
        android:paddingStart="42dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/inNameFood"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/inNameFood" />

    <ImageButton
        android:id="@+id/btnInComplete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/check_white" />

    <ImageButton
        android:id="@+id/btnInPlus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/btnInComplete"
        app:layout_constraintTop_toBottomOf="@+id/btnInComplete"
        app:srcCompat="@drawable/plus_white" />

</android.support.constraint.ConstraintLayout>