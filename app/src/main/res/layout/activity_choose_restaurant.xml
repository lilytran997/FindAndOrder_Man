<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b4"
    tools:context=".ChooseRestaurant">

    <TextView
        android:id="@+id/direcInBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_back_white"
        android:gravity="center"
        android:padding="10dp"
        android:text="Đây là những quán gần bạn:"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_store"
        android:layout_width="91dp"
        android:layout_height="64dp"
        android:background="@drawable/btn_haft_round_under"
        android:padding="5dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_dir"
        app:srcCompat="@drawable/shop" />

    <ImageButton
        android:id="@+id/btn_food_menu"
        android:layout_width="85dp"
        android:layout_height="43dp"
        android:background="@drawable/btn_haft_ground_under_2"
        android:padding="5dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_store"
        app:srcCompat="@drawable/cutlery_white" />

    <ImageButton
        android:id="@+id/btn_bill"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:background="@drawable/btn_haft_ground_under_2"
        android:padding="5dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_food_menu"
        app:srcCompat="@drawable/shopping_cart_white" />

    <ImageButton
        android:id="@+id/btn_dir"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_haft_ground_under_2"
        android:cropToPadding="false"
        android:padding="7dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/location_white" />

    <ListView
        android:id="@+id/list_restaurant"
        android:layout_width="399dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/direcInBill" />



</android.support.constraint.ConstraintLayout>